<idea-plugin>
    <id>de.tobiasdollhofer.CodeCast</id>
    <name>CodeCast</name>
    <vendor email="tobias.dollhofer@stud.uni-regensburg.de" url="https://www.uni-regensburg.de">University of Regensburg</vendor>

    <description>CodeCast is a plugin for programming novices. It provides a player for audio comments to improve code comprehention.</description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="de.tobiasdollhofer.codecast.ui.CodeCastPlayerFactory" id="CodeCast" anchor="right" />
        <projectService serviceImplementation="de.tobiasdollhofer.codecast.player.service.PlaylistServiceImpl"
                        serviceInterface="de.tobiasdollhofer.codecast.player.service.PlaylistService" />
    </extensions>

    <actions>
        <action id="org.intellij.sdk.action.GroupPopupDialogAction" class="Test"
                text="Test Action" description="Simple action to test action-functionallity">
            <add-to-group group-id="ToolsMenu" />
        </action>
    </actions>

    <applicationListeners>
        <listener class="de.tobiasdollhofer.codecast.player.service.ProjectOpenCloseListener" topic="com.intellij.openapi.project.ProjectManagerListener" />
    </applicationListeners>
</idea-plugin>